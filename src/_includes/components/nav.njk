<header class="text-gray-700 body-font">
  <div class="container mx-auto max-w-screen-lg flex flex-wrap p-5 flex-col md:flex-row items-center">
    <a class="flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0">
      <span class="text-xl">madde</span>
    </a>
    <nav class="md:ml-auto flex flex-wrap items-center text-base justify-center">
      {% set navPages = collections.all | eleventyNavigation %}
      {%- for entry in navPages %}
        <a class="mr-8 hover:text-gray-900" href="{{ entry.url | url }}"{% if entry.url == page.url %} data-current="current item"{% endif %}>{{ entry.title }}</a>
      {%- endfor %}
  </nav>
  </div>
</header>
